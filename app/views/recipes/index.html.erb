<p>Powered By Food2Fork.com</p>

<h1>Searching for - <%= @search_term %></h1>

<% if @recipes.nil? %>

<p>No Courses found with the relevant information... Sorry</p>

<% else %>

<table>
	<tr>
		<th>
			Image
		</th>
		<th>
			Title
		</th>
		<th>
			 Social Rank
		</th>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr>
			<td>
				<% 
					@title = sanitize recipe["title"] 
					@url = recipe['f2f_url']
					@image_url = recipe['image_url']
				%>

				<%= link_to(@url) do %>
					<%= image_tag(@image_url, title: @title, size: "100x100") %>
				<% end %>
				<a href=<%= recipe['f2f_url'] %>, )>
					
				</a>
			</td>
			<td>
				
				<%= link_to @title, @url %>
			</td>
			<td><%= recipe["social_rank"] %></td>
		</tr>
	<% end %>

</table>

<% end %>